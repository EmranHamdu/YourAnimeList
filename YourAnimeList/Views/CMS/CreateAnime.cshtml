@model Anime

<form method="post" asp-action="CreateAnime">

    <div class="border p-3">

        <div class="form-group row">
            <h2 class="text-info pl-3">Add Anime</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeName" class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeGenere"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeGenere" class="form-control" />
                    </div>
                    </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeDescription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeDescription" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeReleaseDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeReleaseDate" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeStudio"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeStudio" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeEpisodes"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeEpisodes" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeRating"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeRating" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeURL"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeURL" class="form-control" />
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-100" value="Create" />
                        </div>
                        <div>
                            <a asp-action="AddAnime" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</form>


