@model Anime

@{
    ViewData["Title"] = "Remove Anime";
}

<form method="post" asp-action="DeletePost">
    <input asp-for="ID" hidden />
    <div class="border p-3 edit-bg">

        <div class="form-group row">
            <h2 class="text-info pl-3">Delete Anime</h2>
        </div>
        <div class="row">
            <div class="col-8">
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeName"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeName" disabled class="form-control" />
                    </div>

                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeGenere"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeGenere" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeDescription"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeDescription" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeReleaseDate"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeReleaseDate" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeStudio"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeStudio" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeEpisodes"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeEpisodes" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeRating"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeRating" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="AnimeURL"></label>
                    </div>
                    <div class="col-8">
                        <input asp-for="AnimeURL" disabled class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-4 row">
                        <div class="col">
                            <input type="submit" class="btn btn-danger w-100" value="Delete" />
                        </div>
                        <div>
                            <a asp-action="AddAnime" class="btn btn-success w-100">Back</a>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </div>
</form>


