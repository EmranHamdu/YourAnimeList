@model IEnumerable<Anime>

@{
    ViewData["Title"] = "Anime Lists";
}

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-light">Anime List</h2>
        </div>
        <div class="col-6 text-right">
            <a asp-controller="CMS" asp-action="CreateAnime" class="btn btn-secondary">Add New Anime</a>
        </div>
    </div>

    <br /><br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        Name
                    </th>
                    <th>
                        Genere
                    </th>
                    <th>
                        Description
                    </th>
                    <th>
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var obj in Model)
                {
                    <tr>
                        <td width="15%">@obj.AnimeName</td>
                        <td width="10%">@obj.AnimeGenere</td>
                        <td width="65%">@obj.AnimeDescription</td>
                        <td class="text-center">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="CMS" asp-route-ID="@obj.ID" asp-action="Edit" class="btn btn-info mx-2">Edit</a>
                                <a asp-controller="CMS" asp-route-ID="@obj.ID" asp-action="Delete" class="btn btn-danger">Delete</a>
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }

    else
    {
        <p>No item found.</p>
    }

</div>